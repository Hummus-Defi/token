{
  "root":true,
  "env":{
     "es6":true,
     "node":true,
     "mocha":true
  },
  "parserOptions":{
     "ecmaVersion":8
  },
  "plugins":[
     "mocha-no-only",
     "prettier"
  ],
  "globals":{
     "artifacts":false,
     "contract":false,
     "assert":false,
     "web3":false
  },
  "extends":[
     "eslint:recommended",
     "plugin:prettier/recommended"
  ],
  "overrides":[
     {
        "files":[
           "**/*.ts"
        ],
        "parser":"@typescript-eslint/parser",
        "plugins":[
           "@typescript-eslint",
           "mocha-no-only",
           "prettier"
        ],
        "extends":[
           "eslint:recommended",
           "plugin:@typescript-eslint/recommended",
           "plugin:prettier/recommended"
        ]
     }
  ]
}